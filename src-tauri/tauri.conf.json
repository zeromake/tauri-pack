{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ariang",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http":{
        "scope":[
          "http://**",
          "https://**",
          "ws://**",
          "wss://**"
        ]
      }
    },
    "bundle": {
      "resources": [
        "../dist"
      ],
      "active": true,
      "category": "DeveloperTool",
      "icon": [
        "../bin/icons/32x32.png",
        "../bin/icons/128x128.png",
        "../bin/icons/128x128@2x.png",
        "../bin/icons/icon.icns",
        "../bin/icons/icon.ico"
      ],
      "identifier": "com.zeromake.ariang",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "AriaNg",
        "width": 800,
        "height": 480
      }
    ]
  }
}
